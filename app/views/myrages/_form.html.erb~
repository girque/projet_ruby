<%= form_for(@rage) do |f| %>
  <% if @rage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rage.errors.count, "error") %> prohibited this myrage from being saved:</h2>

      <ul>
      <% @rage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
